{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Книга</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ book.id }}</td>
        </tr>
        <tr>
            <th>Название</th>
            <td>{{ book.title }}</td>
        </tr>
        <tr>
            <th>Автор</th>
            <td>{{ book.author }}</td>
        </tr>
        <tr>
            <th>Дата выпуска</th>
            <td>{{ book.year ? book.year|date('Y') : '' }}</td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">Вернуться</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}">Изменить</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}