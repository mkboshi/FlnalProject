{% extends 'base.html.twig' %}

{% block title %}Reader{% endblock %}

{% block body %}
    <h1>Читатели</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Адрес</th>

        </tr>
        </thead>
        <tbody>
        {% for reader in readers %}
            <tr>
                <td>{{ reader.id }}</td>
                <td>{{ reader.fio }}</td>
                <td>{{ reader.phone }}</td>
                <td>{{ reader.adres }}</td>
                {#<td>
                    <a href="{{ path('app_reader_show', {'id': reader.id}) }}">Показать</a>
                    <a href="{{ path('app_reader_edit', {'id': reader.id}) }}">edit</a>
                </td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reader_new') }}">Добавить</a>
{% endblock %}