{% extends 'base.html.twig' %}

{% block title %}Список областей{% endblock %}

{% block body %}
    <h1>Список областей</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Изменить</th>



        </tr>
        </thead>
        <tbody>
        {% for catalog in catalogs %}
            <tr>
                <td>{{ catalog.id }}</td>
                <td>{{ catalog.nameCatalog }}</td>
                <td>
                    {#<a href="{{ path('app_catalog_show', {'id': catalog.id}) }}">Показать</a>#}
                    <a href="{{ path('app_catalog_edit', {'id': catalog.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_catalog_new') }}">Добавить</a>
{% endblock %}